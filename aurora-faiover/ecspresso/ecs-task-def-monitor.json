{
  "family": "aurora-failover-db-monitor",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "{{ tfstate `aws_iam_role.ecs_task_execution.arn` }}",
  "taskRoleArn": "{{ tfstate `aws_iam_role.ecs_task.arn` }}",
  "containerDefinitions": [
    {
      "name": "db-monitor",
      "image": "{{ tfstate `aws_ecr_repository.aurora_failover_app.repository_url` }}:latest",
      "essential": true,
      "command": ["ts-node", "db-monitor.ts"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/aurora-failover-db-monitor",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "/aurora-failover/db/host"
        },
        {
          "name": "DB_USER",
          "valueFrom": "/aurora-failover/db/user"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "/aurora-failover/db/password"
        }
      ]
    }
  ]
}
